<div class="column is-3">
  <div class="card">
    <div class="card-content">
      <h3 class="title is-5"><%= customer.full_name %></h3>
      <% if customer.image.present? %>
        <%= image_tag customer.image %>
      <% end %>
      <p><%= customer.phone_number%></p>
      <p><%= customer.email_address%></p>
    </div>
  </div>
</div>